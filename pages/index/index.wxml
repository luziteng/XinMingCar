
<view class='swiper_box'>
  <swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
  circular = '{{circular}}'
  indicator-color = '{{color}}'
  indicator-active-color ='{{tipsColor}}'
  >
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="750" height="150" />
      </swiper-item>
    </block>
  </swiper>
</view>